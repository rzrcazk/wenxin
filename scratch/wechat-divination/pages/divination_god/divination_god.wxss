.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background: radial-gradient(circle at center, #f4f1ea 0%, #d6e4e8 100%); /* Light Paper to Mist */
  box-sizing: border-box;
}

.header {
  font-size: 48rpx;
  margin-bottom: 30rpx;
  font-weight: bold;
  color: #2c3e50;
  font-family: "Kaiti SC", "STKaiti", serif;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.result-area {
  height: 28vh;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 20rpx;
  box-shadow: inset 0 0 20rpx rgba(0,0,0,0.05);
}

.input-area {
  flex: 1;
  width: 100%;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
}

.input-label {
  text-align: center;
  margin-bottom: 25rpx;
  font-size: 36rpx;
  color: #8e44ad; /* Mystical Purple */
  font-weight: bold;
  letter-spacing: 2rpx;
}

.coin-selector {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10rpx;
  flex: 1;
}

.coin-option {
  width: 48%;
  height: 46%;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.08);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

/* Selection State */
.coin-option.selected {
  border: 4rpx solid #d4af37;
  background-color: #fffbf0;
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 30rpx rgba(212, 175, 55, 0.3);
}

.coin-option.selected::after {
  content: 'âœ”';
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  color: #d4af37;
  font-size: 30rpx;
  font-weight: bold;
}

.coins-visual {
  display: flex;
  justify-content: center;
  margin-bottom: 10rpx;
}

.coin-img {
  width: 110rpx;
  height: 110rpx;
  margin: 0 -15rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

.option-label {
  font-size: 28rpx;
  color: #555;
  font-weight: 600;
  margin-top: 10rpx;
}

.completion-msg {
  font-size: 34rpx;
  color: #27ae60;
  margin-bottom: 40rpx;
  font-weight: bold;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { opacity: 0.8; }
  50% { opacity: 1; transform: scale(1.05); }
  100% { opacity: 0.8; }
}

.action-area {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.confirm-btn {
  width: 70%;
  background: linear-gradient(to right, #d4af37, #f1c40f);
  color: #fff;
  font-size: 34rpx;
  border-radius: 50rpx;
  padding: 20rpx 0;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(212, 175, 55, 0.4);
}

.confirm-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.undo-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

.undo-btn {
  font-size: 26rpx;
  color: #999;
  background: transparent;
  border: none;
  padding: 10rpx 30rpx;
}

/* Hexagram Visuals */
.hexagram-visual {
  display: flex;
  flex-direction: column-reverse;
  width: 85%;
  height: 90%;
  justify-content: space-evenly;
}

.line-item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 14%; /* Consistent height per line slot */
}

.line-number {
  font-size: 32rpx;
  color: #95a5a6;
  width: 50rpx;
  text-align: center;
  font-family: serif;
}

.line-content {
  flex: 1;
  height: 40rpx;
  margin-left: 20rpx;
  position: relative;
}

.line-content.placeholder {
  background: rgba(0,0,0,0.03);
  border-radius: 4rpx;
}

.yang-line {
  width: 100%;
  height: 100%;
  background-color: #2c3e50; /* Dark Ink */
  border-radius: 4rpx;
  box-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.3);
}

.yin-line {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.yin-segment {
  width: 42%;
  height: 100%;
  background-color: #2c3e50;
  border-radius: 4rpx;
  box-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.3);
}

/* Special Colors for Moving Lines */
.red {
  background-color: #c0392b; /* Red Ink */
  box-shadow: 0 0 10rpx rgba(192, 57, 43, 0.5); /* Glow */
}

.animate-line {
  animation: inkDraw 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

@keyframes inkDraw {
  from { width: 0; opacity: 0; }
  to { width: 100%; opacity: 1; }
}

/* Virtual Toss Section */
.virtual-toss-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
}

.virtual-btn {
  background: linear-gradient(135deg, #8e44ad, #9b59b6);
  color: white;
  font-size: 30rpx;
  padding: 18rpx 60rpx;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 15rpx rgba(142, 68, 173, 0.3);
  border: none;
  transition: all 0.3s ease;
}

.virtual-btn:active {
  transform: scale(0.96);
}

.toss-animation-container {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  height: 100rpx;
  align-items: center;
  perspective: 500px;
}

.toss-coin {
  width: 100rpx;
  height: 100rpx;
}

/* Coin Spin Animation */
@keyframes spin {
  0% { transform: rotateY(0deg); }
  100% { transform: rotateY(3600deg); } /* 10 spins */
}

.spinning {
  animation: spin 1.5s ease-out infinite;
}
