  background-repeat: no-repeat;
  background-position: bottom center;
  background-size: 100% 100%;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  letter-spacing: 10rpx;
  margin-bottom: 10rpx; /* Tightened Gap 1 */
  color: #2c3e50;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.15);
  font-family: "Kaiti SC", "STKaiti", "KaiTi", serif;
  position: relative;
  z-index: 1;
}

.title::after {
  content: '';
  display: block;
  width: 60rpx;
  height: 6rpx;
  background-color: #c0392b;
  margin: 10rpx auto 0;
  border-radius: 4rpx;
}

.instructions {
  z-index: 1;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  padding: 24rpx 40rpx; /* Slightly tighter padding vertical */
  border-radius: 12rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx; /* Tightened Gap 2 */
  width: 100%;
  box-sizing: border-box;
  border: 1rpx solid rgba(255,255,255,0.5);
  border-left: 6rpx solid #d4af37;
  position: relative;
}

.instructions::before {
  content: '❝';
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  font-size: 60rpx;
  color: rgba(212, 175, 55, 0.2);
  font-family: serif;
}

.instruction-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx; /* Slightly reduced */
  color: #2c3e50;
  display: flex;
  align-items: center;
}

.instruction-item {
  font-size: 30rpx;
  color: #555;
  margin-bottom: 12rpx; /* Slightly reduced */
  line-height: 1.5; /* Slightly tighter line height */
  text-align: justify;
  position: relative;
  padding-left: 20rpx;
}

.instruction-item::before {
  content: '•';
  color: #d4af37;
  position: absolute;
  left: 0;
  font-weight: bold;
}

/* Input Section */
.input-section {
  width: 100%;
  margin-bottom: 20rpx; /* Tightened Gap 3 */
  box-sizing: border-box;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.question-input {
  display: block;
  width: 100%;
  height: 280rpx; /* INCREASED height thanks to saved space! */
  background-color: #fff;
  background-image: linear-gradient(#fff 96%, transparent 96%), linear-gradient(90deg, transparent 96%, rgba(0,0,0,0.05) 96%);
  background-size: 100% 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx 8rpx 0 0;
  padding: 30rpx;
  font-size: 34rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  box-shadow: inset 0 2rpx 10rpx rgba(0,0,0,0.05);
  color: #2c3e50;
  margin-bottom: 0;
  vertical-align: bottom;
}

.image-control-area {
  width: 100%;
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
  border-top: none;
  border-radius: 0 0 8rpx 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between; /* Space them out */
  margin-top: -1rpx;
}

.upload-btn {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  background: #fff;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
}

.direct-ask-btn {
  display: flex;
  align-items: center;
  color: #8a6d3b; /* Gold/Brownish text */
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  background: #fcf8e3; /* Light yellow bg */
  border: 1rpx solid #faebcc;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.05);
}

.direct-ask-btn:active {
  background: #f7ecb5;
  transform: translateY(2rpx);
}

.camera-icon, .magic-icon {
  font-size: 34rpx;
  margin-right: 10rpx;
}

.image-preview-box {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: visible;
}

.image-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.remove-btn {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  background: #e74c3c;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.2);
  z-index: 10;
}

.start-btn {
  background: linear-gradient(135deg, #2c3e50 0%, #4ca1af 100%);
  color: #f4f1ea;
  width: 100%;
  border-radius: 60rpx;
  font-size: 38rpx;
  padding: 28rpx 0;
  font-weight: 600;
  letter-spacing: 4rpx;
  box-shadow: 0 15rpx 30rpx rgba(44, 62, 80, 0.25);
  transition: all 0.2s ease;
  border: 2rpx solid rgba(255,255,255,0.1);
  z-index: 1;
  position: relative;
  margin-bottom: 10rpx; /* Minimal bottom margin */
}

.start-btn:active {
  transform: scale(0.98);
  box-shadow: 0 5rpx 10rpx rgba(44, 62, 80, 0.25);
}

.highlight {
  color: #c0392b;
  font-weight: bold;
  background: rgba(192, 57, 43, 0.05);
  padding: 0 4rpx;
  border-radius: 4rpx;
}
