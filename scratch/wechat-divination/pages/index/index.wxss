page {
  height: 100%;
}

.container {
  min-height: 100vh;
  padding: 20rpx 40rpx; /* Reduced top/bottom padding slightly */
  display: flex;
  flex-direction: column;
  align-items: center;
  /* Mystical Deep Background: Foggy Mountain Vibe */
  background: radial-gradient(circle at top center, #eef2f3 0%, #8e9eab 40%, #2c3e50 120%);
  box-sizing: border-box;
  position: relative; /* Context for absolute bg */
  overflow: hidden; /* Clip the mountains */
}

.bg-landscape {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 400rpx; /* Height of the mountain layer */
  z-index: 0; /* Behind everything */
  opacity: 0.3; /* Subtle */
  pointer-events: none;
  /* SVG Data URI for Ink Mountains */
